<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/Title"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/kategori"
        android:layout_toEndOf="@+id/kategori" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/Description"
        android:layout_below="@+id/Title"
        android:layout_toRightOf="@+id/kategori" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/TimeToLive"
        android:layout_below="@+id/Description"
        android:layout_alignLeft="@+id/Description"
        android:layout_alignStart="@+id/Description"
        android:layout_toRightOf="@+id/kategori" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Seriousness"
        android:numStars="5"
        android:mirrorForRtl="false"
        style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
        android:layout_alignTop="@+id/TimeToLive"
        android:layout_toRightOf="@+id/TimeToLive"
        android:layout_toEndOf="@+id/TimeToLive" />

    <ImageView
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:id="@+id/kategori"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@android:drawable/sym_def_app_icon"
        android:layout_alignParentBottom="false"
        android:adjustViewBounds="false" />

</RelativeLayout>